{% extends "layout.njk" %}

{% block title %}Blog â€” {% endblock %}

{% block bodyid %}
{% set activePage = "blog" %}
{% endblock %}

{% block hero %}
<section class="hero">
	<div class="container">
		<h2 class="hero--title">Writings and Mental Musings</h2>
	</div>
</section>
{% endblock %}

{% block content %}
<main id="app">
	<section>
		<div class="container grid">
			<div class="grid grid-2-col">
				<div class="blog--posts" v-for="posts in articles">
				<a :href="posts.link" target="_blank">
					<div class="blog--cover lazyload" :style="{ backgroundImage: 'url(' + posts.cover + ')' }"></div>

				</a>
				<div class="blog--text">
					<h2 class="blog--title"><a :href="posts.link" target="_blank">{% raw %}{{ posts.title }}{% endraw %}</a></h2>
					<p class="blog--subtitle">{% raw %}{{ posts.date }}{% endraw %} | {% raw %}{{ posts.source }}{% endraw %}</p>
				</div>
				</div>
			</div>
		</div>
	</section>
</main>
{% endblock %}